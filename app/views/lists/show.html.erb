<div class="banner">
<h1><%= @list.name %></h1>
</div>

<div class="container">

  <div class="d-flex align-items-end flex-column">
    <%= link_to "New Bookmark", new_list_bookmark_path(@list) , class: "btn btn-success mb-3" %>
  </div>

  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-trip">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
      <div class="card-trip-infos">
          <div>
          <h2><%= bookmark.movie.title %> | <%= bookmark.movie.rating %></h2>
          <p><%= bookmark.movie.overview %></p>
          <p ><%= link_to "Remove", bookmark_path(bookmark.id), class: "btn btn-danger mt-2", method: :delete, data: { confirm: "Are you sure?" } %></p>
          </div>
      </div>
    </div>
  <% end %>
  <%= link_to "Back", lists_path, class: "btn btn-primary btn-sm mt-3"%>
</div>
