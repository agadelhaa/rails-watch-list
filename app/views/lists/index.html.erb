<div class="banner">
<h1>Movie Lists</h1>
</div>

<div class="container">
  <div class= "d-flex justify-content-between">
    <h2>My lists</h2>
    <%= link_to "New List", new_list_path, class: "btn btn-success d-flex" %>
  </div>

  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        <%= link_to list.name, list_path(list), class: "links" %>
      </div>
    <% end %>
  </div>


</div>
